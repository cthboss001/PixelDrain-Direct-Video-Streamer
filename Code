<h1>PixelDrain Video Streamer</h1>
<input type="text" id="linkInput" placeholder="Paste your PixelDrain link here..." />
<br>
<button onclick="loadVideo()">Load Video</button>

<video id="videoPlayer" controls autoplay hidden></video>

<script>
  function loadVideo() {
    const input = document.getElementById('linkInput').value.trim();
    const videoPlayer = document.getElementById('videoPlayer');

    // Extract file ID if full link is given
    let fileId = input;
    if (input.includes('pixeldrain.com/u/')) {
      fileId = input.split('pixeldrain.com/u/')[1].split(/[?#]/)[0];
    }

    const directLink = `https://pixeldrain.com/api/file/${fileId}`;

    videoPlayer.src = directLink;
    videoPlayer.hidden = false;
  }
</script>

